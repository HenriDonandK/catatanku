<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="8dp"  android:paddingBottom="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/note_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toStartOf="@+id/imageViewDeleteNote" android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/textViewNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6" android:text="Judul Catatan"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/textViewNoteContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2" android:text="Cuplikan isi catatan..."
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            android:textColor="?android:attr/textColorSecondary"/> </LinearLayout>

    <ImageView
        android:id="@+id/imageViewDeleteNote"
        android:layout_width="40dp" android:layout_height="40dp"
        android:src="@drawable/ic_delete"
        android:contentDescription="Hapus Catatan"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="8dp" android:background="?attr/selectableItemBackgroundBorderless" app:tint="?android:attr/textColorHint" /> </RelativeLayout>